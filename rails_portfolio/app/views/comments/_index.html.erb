<% for comment in comments %>
    <div class="well well-small comment pull-right ">
      <p>
        <%= comment.body %>
      </p>

      <p>
        <%= link_to 'Reply', new_comment_path(parent_id: comment.id, project_id: project.id) %>
      </p>
      <%= render 'comments/index', comments: comment.children, project: @project %>
    </div>
<% end %>