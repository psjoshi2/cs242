<h1>Listing file_versions</h1>

<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th>Revision</th>
      <th>File record</th>
      <th>Author</th>
      <th>Message</th>
      <th>Date</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% @file_versions.each do |file_version| %>
        <tr>
          <td><%= file_version.revision %></td>
          <td><%= file_version.file_record_id %></td>
          <td><%= file_version.author %></td>
          <td><%= file_version.message %></td>
          <td><%= file_version.date %></td>
          <td><%= link_to 'Show', file_version %></td>
          <td><%= link_to 'Edit', edit_file_version_path(file_version) %></td>
          <td><%= link_to 'Destroy', file_version, method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>
    <% end %>
  </table>
</div>

